# Render Environment Variables Template
# Copy this file to .env.render and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://admin:your_password@localhost:5432/syriagpt
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=syriagpt

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-render-app.onrender.com/auth/oauth/google/callback

# Application Configuration
CORS_ALLOW_ALL=true
RUNNING_IN_DOCKER=true
DOCKER_ENV=true
PORT=10000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=your-render-app.onrender.com,localhost

# Performance
WORKERS=1
MAX_CONNECTIONS=100
TIMEOUT=30
